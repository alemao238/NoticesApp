<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_content"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:id="@+id/listitem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is my name"/>

        <TextView
            android:layout_below="@id/listitem_name"
            android:padding="3dp"
            android:textSize="@dimen/text_header"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:id="@+id/listitem_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is my message"/>
        <TextView
            android:textStyle="italic"
            android:padding="3dp"
            android:textSize="@dimen/text_sub_content"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/listitem_message"
            android:id="@+id/listitem_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"/>
    </RelativeLayout>

</LinearLayout>