<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/list_padding"
    android:id="@+id/notice_container">

    <ImageView
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/imageview_title"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:background="@mipmap/ic_report_black_24dp"/>
    <TextView
        android:textAllCaps="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/imageview_title"
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:textSize="@dimen/text_header"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:layout_below="@id/textview_title"
        android:id="@+id/textview_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MESSAGE"
        android:textSize="@dimen/text_content"
        android:layout_marginLeft="27dp"/>

    <TextView
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:layout_marginRight="10dp"
        android:id="@+id/textview_user"
        android:layout_below="@id/textview_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER"
        android:gravity="right"
        android:layout_toLeftOf="@+id/textview_date"
        android:layout_toStartOf="@+id/textview_date"
        android:textSize="@dimen/text_sub_content"/>
    <TextView
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:id="@+id/textview_date"
        android:layout_below="@id/textview_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="DATE"
        android:textSize="@dimen/text_sub_content"/>
</RelativeLayout>